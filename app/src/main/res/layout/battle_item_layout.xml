<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:id="@+id/user_profile_card"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|center_horizontal"
        app:cardCornerRadius="48dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/user_profile_image_inside_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/iconmonstr_github_1" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="아이템 제목"/>
        <TextView
            android:id="@+id/room_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주제"/>

        <TextView
            android:id="@+id/room_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="난이도"/>

        <TextView
            android:id="@+id/host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="호스트"/>
        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="아이템 설명"/>

    </LinearLayout>

    <Button
        android:id="@+id/battle_join"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="입장"
        android:background="@drawable/battle_join_button" />

</LinearLayout>