<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="#FFFFFF" />

    <!-- 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" />

    <!-- 모서리 둥글기 -->
    <corners android:radius="8dp" />

    <!-- 내부 여백 (텍스트와 테두리 사이) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>